<div id="wikis">
<h1> New Wiki </h1>


<%= form_for @wiki do |f| %>
  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: 'form-control', placeholder: "Enter the title" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 18, class: 'form-control', placeholder: "Enter the body" %>

  </div>

<%= render partial: 'form', locals: { f: f } %>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
</div>

